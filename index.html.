  <!-- –ó–∞–ø—Ä–µ—Ç –ø—Ä–∞–≤–æ–≥–æ –∫–ª–∏–∫–∞ –∏ –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏—è -->
  <script>
    document.addEventListener('contextmenu', function (e) { e.preventDefault(); });
    document.addEventListener('dragstart', function (e) { e.preventDefault(); });
  </script>

  <!-- JS: –∫–∞—Ä—É—Å–µ–ª–∏ (hero + —Ñ–æ—Ç–æ) -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const carousels = document.querySelectorAll('.carousel');

      carousels.forEach(function (carousel) {
        const slides = carousel.querySelectorAll('.carousel-slide');
        const prevBtn = carousel.querySelector('.carousel-arrow.prev');
        const nextBtn = carousel.querySelector('.carousel-arrow.next');

        if (!slides.length) return;

        let index = 0;

        function showSlide(i) {
          slides.forEach((slide, idx) => {
            const active = idx === i;
            slide.classList.toggle('active', active);

            const video = slide.querySelector('video');
            if (video) {
              if (active) {
                try { video.currentTime = 0; video.play(); } catch (e) {}
              } else {
                video.pause();
              }
            }
          });
          index = i;
        }

        function next(e) {
          if (e) e.stopPropagation();
          showSlide((index + 1) % slides.length);
        }

        function prev(e) {
          if (e) e.stopPropagation();
          showSlide((index - 1 + slides.length) % slides.length);
        }

        if (nextBtn) nextBtn.addEventListener('click', next);
        if (prevBtn) prevBtn.addEventListener('click', prev);

        showSlide(0);
      });
    });
  </script>

  <!-- JS: GIF tabs -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const cards = document.querySelectorAll('.gif-variant');

      cards.forEach((card) => {
        const tabs = card.querySelectorAll('.gif-tab');
        const videoEl = card.querySelector('video.gif-media-video');
        const titleEl = card.querySelector('.gif-meta-title');
        const descEl = card.querySelector('.gif-meta-desc');

        tabs.forEach((tab) => {
          tab.addEventListener('click', (e) => {
            e.stopPropagation();
            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            const src = tab.dataset.src;
            const title = tab.dataset.title || 'Variant';
            const desc = tab.dataset.desc || '';

            videoEl.src = src;
            try { videoEl.currentTime = 0; videoEl.play(); } catch (e) {}

            titleEl.textContent = title;
            descEl.textContent = desc;
          });
        });

        const active = card.querySelector('.gif-tab.active') || tabs[0];
        if (active) {
          videoEl.src = active.dataset.src;
          try { videoEl.play(); } catch (e) {}
          titleEl.textContent = active.dataset.title || 'Standard';
          descEl.textContent = active.dataset.desc || '';
        }
      });
    });
  </script>

  <!-- JS: Lightbox viewer (img + video) + —Å—Ç—Ä–µ–ª–∫–∏ + —Å–≤–∞–π–ø -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const lb = document.getElementById('lightbox');
      const lbClose = document.getElementById('lightboxClose');
      const lbMedia = document.getElementById('lightboxMedia');
      const lbTitle = document.getElementById('lightboxTitle');
      const lbPrev = document.getElementById('lbPrev');
      const lbNext = document.getElementById('lbNext');
      const lbWrap = document.getElementById('lightboxWrap');

      let items = [];        // [{type, src, title}]
      let currentIndex = 0;  // –∏–Ω–¥–µ–∫—Å –≤ items

      function getTitleFromNode(node) {
        const tag = node.tagName.toLowerCase();
        if (tag === 'img') return node.getAttribute('alt') || '–§–æ—Ç–æ';
        if (tag === 'video') return node.getAttribute('aria-label') || '–í–∏–¥–µ–æ / GIF';
        return '–ü—Ä–æ—Å–º–æ—Ç—Ä';
      }

      function extractItemFromSlide(slide) {
        const img = slide.querySelector('img');
        const vid = slide.querySelector('video');
        if (img) {
          return { type: 'img', src: img.currentSrc || img.src, title: getTitleFromNode(img) };
        }
        if (vid) {
          return { type: 'video', src: vid.currentSrc || vid.src, title: getTitleFromNode(vid) };
        }
        return null;
      }

      function render(index) {
        if (!items.length) return;
        currentIndex = (index + items.length) % items.length;

        // –æ—á–∏—Å—Ç–∫–∞
        lbMedia.innerHTML = '';

        const item = items[currentIndex];
        lbTitle.textContent = item.title || '–ü—Ä–æ—Å–º–æ—Ç—Ä';

        if (item.type === 'img') {
          const img = document.createElement('img');
          img.src = item.src;
          img.alt = item.title || '–§–æ—Ç–æ';
          lbMedia.appendChild(img);
        } else {
          const v = document.createElement('video');
          v.src = item.src;
          v.autoplay = true;
          v.loop = true;
          v.muted = true;
          v.playsInline = true;
          v.controls = true;
          lbMedia.appendChild(v);
          try { v.play(); } catch (e) {}
        }

        // –ø–æ–∫–∞–∑—ã–≤–∞—Ç—å —Å—Ç—Ä–µ–ª–∫–∏ —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –µ—Å—Ç—å —á—Ç–æ –ª–∏—Å—Ç–∞—Ç—å
        const showNav = items.length > 1;
        lbPrev.classList.toggle('is-hidden', !showNav);
        lbNext.classList.toggle('is-hidden', !showNav);
      }

      function openLightboxFromNode(node) {
        // —Å–æ–±—Ä–∞—Ç—å items: –µ—Å–ª–∏ –∫–ª–∏–∫ –∏–∑ –∫–∞—Ä—É—Å–µ–ª–∏ ‚Äî –±–µ—Ä—ë–º –≤—Å–µ —Å–ª–∞–π–¥—ã —ç—Ç–æ–π –∫–∞—Ä—É—Å–µ–ª–∏
        items = [];
        currentIndex = 0;

        const carousel = node.closest('.carousel');
        if (carousel) {
          const slides = Array.from(carousel.querySelectorAll('.carousel-slide'));
          slides.forEach((s) => {
            const it = extractItemFromSlide(s);
            if (it) items.push(it);
          });

          // –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –∏–Ω–¥–µ–∫—Å —Ç–µ–∫—É—â–µ–≥–æ —Å–ª–∞–π–¥–∞
          const slide = node.closest('.carousel-slide');
          if (slide) {
            const idx = slides.findIndex(s => s === slide);
            currentIndex = Math.max(0, idx);
          } else {
            currentIndex = 0;
          }
        } else {
          // –Ω–µ –≤ –∫–∞—Ä—É—Å–µ–ª–∏ ‚Äî –æ—Ç–∫—Ä—ã–≤–∞–µ–º –æ–¥–∏–Ω–æ—á–Ω—ã–π
          const tag = node.tagName.toLowerCase();
          if (tag === 'img') items = [{ type: 'img', src: node.currentSrc || node.src, title: getTitleFromNode(node) }];
          if (tag === 'video') items = [{ type: 'video', src: node.currentSrc || node.src, title: getTitleFromNode(node) }];
          currentIndex = 0;
        }

        if (!items.length) return;

        document.body.classList.add('lb-open');
        lb.classList.add('show');
        lb.setAttribute('aria-hidden', 'false');

        render(currentIndex);
      }

      function closeLightbox() {
        lb.classList.remove('show');
        lb.setAttribute('aria-hidden', 'true');
        document.body.classList.remove('lb-open');

        const v = lbMedia.querySelector('video');
        if (v) { try { v.pause(); } catch(e) {} }

        lbMedia.innerHTML = '';
        items = [];
        currentIndex = 0;
      }

      function next() { if (items.length > 1) render(currentIndex + 1); }
      function prev() { if (items.length > 1) render(currentIndex - 1); }

      // –ó–∞–∫—Ä—ã—Ç–∏–µ
      lbClose.addEventListener('click', (e) => { e.stopPropagation(); closeLightbox(); });
      lb.addEventListener('click', (e) => { if (e.target === lb) closeLightbox(); });

      // –ù–∞–≤–∏–≥–∞—Ü–∏—è –∫–Ω–æ–ø–∫–∞–º–∏
      lbNext.addEventListener('click', (e) => { e.stopPropagation(); next(); });
      lbPrev.addEventListener('click', (e) => { e.stopPropagation(); prev(); });

      // –ö–ª–∞–≤–∏–∞—Ç—É—Ä–∞: ESC / ‚Üê ‚Üí
      document.addEventListener('keydown', (e) => {
        if (!lb.classList.contains('show')) return;
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowRight') next();
        if (e.key === 'ArrowLeft') prev();
      });

      // –°–≤–∞–π–ø –Ω–∞ —Ç–µ–ª–µ—Ñ–æ–Ω–µ
      let touchX = 0;
      let touchY = 0;
      let tracking = false;

      lbWrap.addEventListener('touchstart', (e) => {
        if (!lb.classList.contains('show')) return;
        if (!e.touches || !e.touches.length) return;
        tracking = true;
        touchX = e.touches[0].clientX;
        touchY = e.touches[0].clientY;
      }, { passive: true });

      lbWrap.addEventListener('touchmove', (e) => {
        // –Ω–∏—á–µ–≥–æ –Ω–µ –¥–µ–ª–∞–µ–º, –ø—Ä–æ—Å—Ç–æ —Ñ–∏–∫—Å–∏—Ä—É–µ–º —á—Ç–æ –µ—Å—Ç—å –¥–≤–∏–∂–µ–Ω–∏–µ
      }, { passive: true });

      lbWrap.addEventListener('touchend', (e) => {
        if (!tracking || !lb.classList.contains('show')) return;
        tracking = false;

        if (!e.changedTouches || !e.changedTouches.length) return;
        const endX = e.changedTouches[0].clientX;
        const endY = e.changedTouches[0].clientY;

        const dx = endX - touchX;
        const dy = endY - touchY;

        // –µ—Å–ª–∏ —ç—Ç–æ –≤–µ—Ä—Ç–∏–∫–∞–ª—å–Ω—ã–π –∂–µ—Å—Ç ‚Äî –Ω–µ –ª–∏—Å—Ç–∞–µ–º
        if (Math.abs(dy) > Math.abs(dx)) return;

        // –ø–æ—Ä–æ–≥
        if (dx <= -55) next();
        if (dx >= 55) prev();
      }, { passive: true });

      // –ü–æ–¥–∫–ª—é—á–∞–µ–º –∫–ª–∏–∫–∏ –∫ –º–µ–¥–∏–∞
      function bindMediaClicks(root) {
        const imgs = root.querySelectorAll('.gallery-media img');
        const vids = root.querySelectorAll('.gallery-media video');

        imgs.forEach((img) => {
          img.addEventListener('click', (e) => {
            e.stopPropagation();
            openLightboxFromNode(img);
          });
        });

        vids.forEach((vid) => {
          vid.addEventListener('click', (e) => {
            e.stopPropagation();
            openLightboxFromNode(vid);
          });
        });
      }

      bindMediaClicks(document);
    });
  </script>
</body>
</html>

